{
  "name": "Thread Helper",
  "version": "0.1.2",
  "description": "A helper for twitter threads. Find your related past tweets and quote them as you write.",
  "permissions": [
    "declarativeContent",
    "storage",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "https://api.twitter.com/",
    "https://*.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*"],
      "js": ["js/jquery-3.4.1.slim.js", "js/bundleCS.js","js/cs2.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "images/thread_16.png",
    "32": "images/thread_32.png",
    "48": "images/thread_48.png",
    "128": "images/thread_128.png"
  },
  "manifest_version": 2,
  "background": {
    "scripts": [ "js/bundleBG.js", "js/elasticlunr.js", "js/bg2.js", "js/tweet.js"]
  },
  "page_action": {
    "default_title": "Thread helper",
    "default_popup": "html/popup.html"
  },
  "options_page": "html/options.html"
}
