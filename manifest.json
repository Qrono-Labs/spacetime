{
  "name": "Related Tweets",
  "version": "1.0",
  "description": "Self-thread helper",
  "permissions": ["activeTab", "webRequest", "declarativeContent"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": [
        "js/jquery-3.4.1.slim.js",
        "js/trump.js",
        "js/stemmer.js",
        "js/stopwords.js",
        "js/getRelated.js",
        "js/content_script.js"
      ],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "images/thread_16.png",
    "32": "images/thread_32.png",
    "48": "images/thread_48.png",
    "128": "images/thread_128.png"
  },
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  }
}
